<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popupvertical" >

    <include
        android:id="@+id/headerlyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_1"
        layout="@layout/headerlayout" />

    <TextView
        android:id="@+id/tutorialtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerlyt"
        android:layout_centerHorizontal="true"
        android:text="Tutorial List"
        android:textColor="@color/txtcolor"
        android:textSize="@dimen/dimen_20" />

    <TextView
        android:id="@+id/multiplicationheadertxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tutorialtxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="Multiplication"
        android:textColor="@color/txtcolor"
        android:textSize="@dimen/dimen_18" />

    <include
        android:id="@+id/bottomlyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_50"
        layout="@layout/bottomlayout" />

    <ListView
        android:id="@+id/multilist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomlyt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"
        android:background="@android:color/transparent"
        android:dividerHeight="@dimen/dimen_1"
        android:divider="@color/txtcolor"
        android:layout_below="@+id/multiplicationheadertxt"
        android:layout_marginTop="@dimen/dimen_10"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>