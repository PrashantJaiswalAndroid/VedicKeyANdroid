<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_15"
        android:text="The first digit of the answer will be th same as the first digit of the number with addition of step2 carry(if any)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/txtcolor" />

    <EditText
        android:id="@+id/txt2"
         android:layout_width="@dimen/dimen_50"
        android:layout_height="wrap_content"
       
        android:layout_below="@+id/txt1"
        android:layout_toRightOf="@+id/diff1"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/editborder"
        android:paddingLeft="@dimen/dimen_2"
        android:text=""
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"/>
    
     <Button
        android:id="@+id/btn1"
        android:layout_width="@dimen/dimen_45"
        android:layout_height="@dimen/dimen_40"
        android:layout_below="@+id/txt1"
        android:layout_toRightOf="@+id/txt2"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@drawable/check"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_10" />

   
     
     <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_15"
        android:text="Then write above results of step3,step2 and step1 respectively and we will get the final answer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/txtcolor" />

    <EditText
        android:id="@+id/txt4"
         android:layout_width="@dimen/dimen_50"
        android:layout_height="wrap_content"
       
        android:layout_below="@+id/txt3"
        android:layout_toRightOf="@+id/diff1"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/editborder"
        android:paddingLeft="@dimen/dimen_2"
        android:text=""
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"/>
    
     <Button
        android:id="@+id/btn2"
        android:layout_width="@dimen/dimen_45"
        android:layout_height="@dimen/dimen_40"
        android:layout_below="@+id/txt3"
        android:layout_toRightOf="@+id/txt4"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@drawable/check"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_10" />

   

  
     

</RelativeLayout>